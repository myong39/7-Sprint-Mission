{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node", //모듈 해석?? 방식
    // "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,

    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@data/*": ["data/*"],
      "@hooks/*": ["hooks/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "*": ["*"]
    },
  },
  "include": ["vite.config.ts"]
}
